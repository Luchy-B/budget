
<div class="login-nav">
      <div><%= link_to "BACK", categories_path, class: "rails-link" %> </div>
      <div>TRANSACTION</div>  
      <div class="rails-link"><%= button_to "LOG-OUT", destroy_user_session_path, method: :delete, class: "rails-btn" %></div>    
  </div>

<div>
  <div class="category transaction-cate">
    <h3><%= @category.name %></h3>
    <p><strong><%= @operations.sum(:amount) %>$ </strong></p>
  </div>

<% if @operations.nil? %>
 <p>No transaction available</p>
 <% else %>
 <% @operations.each do |operation| %>
 <div class = "category" >
   <div class = "category-content">

   <div class="photo">
   <% if @category.icon.attached? %>
     <%= image_tag @category.icon, class: "profile_img" %>
   <% end %>
 </div>

    <div class="transaction-time">
      <p><%= operation.name %></p>
      <p class="fs"><%= operation.created_at.strftime("%d %b %Y") %></p>
    </div>
    <p><strong><%= operation.amount %>$ </strong></p>
  </div>
 </div>

 <% end %>
 <% end %>
 <div class = "footer_container">
 <div class ="footer">
 <p class="forgot-pwd"><%= link_to 'ADD NEW TRANSACTION', new_category_operation_path %></p>
 </div>
 </div>
</div>